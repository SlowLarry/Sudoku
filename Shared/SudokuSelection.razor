@inherits ComponentDirtyRender

@foreach (var rect in selectionRects)
{
    if (rect != null)
    {
        <rect @key="rect" x="@rect.x" y="@rect.y" width="@rect.width" height="@rect.height" fill-opacity="@rect.opacity" fill="@rect.color" stroke-width="@rect.strokeWidth" stroke="@(rect.strokeWidth > 0 ? rect.strokeWidth : "none")"/>
    }
}
